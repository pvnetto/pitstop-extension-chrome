{
    "manifest_version": 2,
    "name": "Pitstop",
    "version": "1.0",
    "description": "Google Chrome extension for Autoforce support team",
    "background": {
        "scripts": [
            "index.js"
        ],
        "persistent": false
    },
    "options_page": "./options/options.html",
    "browser_action": {
        "default_title": "Inject JS file"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs",
        "activeTab",
        "contextMenus",
        "storage"
    ]
}